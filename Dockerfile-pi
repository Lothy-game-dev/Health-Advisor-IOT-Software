FROM python:3.9-slim

# Cài đặt công cụ build và thư viện cần thiết
RUN apt-get update && apt-get install -y \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Thiết lập thư mục làm việc
WORKDIR /app

# Sao chép tất cả mã nguồn
COPY . .

# Cài đặt dependencies bao gồm cả thư viện Raspberry Pi
RUN pip install --no-cache-dir -r requirements-pi.txt --install-option="--force-pi"

# Thiết lập biến môi trường
ENV FLASK_APP=main.py
ENV FLASK_ENV=production
ENV DEVICE_TYPE=raspberry_pi

# Biến môi trường khác
ENV FLASK_SECRET_KEY=""
ENV GOOGLE_CLIENT_ID=""
ENV GOOGLE_CLIENT_SECRET=""
ENV DEV_FIREBASE_API_KEY=""
ENV DEV_FIREBASE_AUTH_DOMAIN=""
ENV DEV_FIREBASE_PROJECT_ID=""
ENV DEV_FIREBASE_STORAGE_BUCKET=""
ENV DEV_FIREBASE_MESSAGING_SENDER_ID=""
ENV DEV_FIREBASE_APP_ID=""
ENV GEMINI_API_KEY=""

# Mở cổng
EXPOSE 5000

# Chạy ứng dụng
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
